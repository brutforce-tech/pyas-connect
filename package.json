{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/angular-workspace/projects/*"
  ],
  "devDependencies": {
    "@types/node": "^22.15.19",
    "lerna": "^8.2.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --ignore \"*example\"",
    "version:libs": "npx lerna version --conventional-commits --no-private --ignore \"*example\" --yes --create-release=github",
    "publish:libs": "npm_config_userconfig=.npmrc.publish lerna publish from-git --ignore \"*example\" --yes",
    "release": "npm run build && npm run version:libs && npm run publish:libs"
  }
}
